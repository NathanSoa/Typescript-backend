generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String          @id
  title       String          @unique
  year        String          @db.Char(4)
  synopsis    String 
  genres      MoviesGenres[]

  @@map("movies")
}

model Genre {
  id          Int              @default(autoincrement()) @id
  name        String           @db.VarChar(20) @unique
  MovieGenres MoviesGenres[]

  @@map("genres")
}

model MoviesGenres {
  Movie       Movie           @relation(fields: [MovieID], references: [id])
  MovieID     String          @map("mov_id")
  Genre       Genre           @relation(fields: [GenreName], references: [name])
  GenreName   String          @map("gen_name")

  @@id([MovieID, GenreName])
  @@map("Movies_Genres")
}

model User {
  id          String         @id
  email       String         @unique
  password    String         
}